{% extends 'base.html.twig' %}
{% block content %}


    <script type="text/javascript" src="{{ asset('vendor/js/socialite.js') }}"></script>
    <script type="text/javascript" src="{{ asset('vendor/js/socialite.min.js') }}"></script>
    <!--...-->



    <script>
        $(document).ready(function() {
            Socialite.load();
        });
    </script>


    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    Liste de stations
                </h3>
                <br>
                <br>


                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" data-bgColor="red">
                    <table id="recherchetable" class="table table-bordered table-striped" border="2" bgcolor="#8b0000">
                        <thead>
                        <tr>


                            <th>Nom</th>
                            <th>Lattitude</th>
                            <th>Longitude</th>



                        </tr>
                        </thead>
                        <tbody>
                        {% for i in stations %}
                            <tr>
                                <td>{{ i.nom}}</td>
                                <td>{{ i.lattitude}}</td>
                                <td>{{ i.longitude}}</td>
                                <td><a href="{{ path('update_station',{'id':i.id}) }}">
                                        <button type="button" class="btn btn-primary">
                                            <i class="fa fa-refresh" aria-hidden="true"></i>
                                            Modifier
                                        </button></a></td>

                                <td><a href="{{ path('station_delete',{'id':i.id}) }}">
                                        <button type="button" class="btn btn-danger" >
                                            <i class="fa fa-trash" aria-hidden="true"></i>   Supprimer une ligne
                                        </button></a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>


                        </tr>

                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->

            </div>
            <!-- /.card -->

        </div>
{% endblock %}