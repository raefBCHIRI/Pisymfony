{% extends 'base2.html.twig' %}
{% block content %}
    <div class="bg-light p-3">
        <h1> Votre panier</h1>

    </div>
    {% if items | length > 0  %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td> {{ item.product.nomP}} </td>
                    <td> {{ item.product.prixP }} </td>
                    <td> {{ item.quantity }} </td>
                    <td> {{ item.product.prixP * item.quantity }}</td>
                    <td>
                        <a href="{{path('cart_remove',{'idP':item.product.idP})}}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-right"> Total :</td>
            <td> {{ total }}</td>
            <td></td>
        </tr>
        </tfoot>
        </table>
    {% else%}
        <p> Votre panier est vide !</p>
    {% endif %}


{% endblock %}